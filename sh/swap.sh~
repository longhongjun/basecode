#!/bin/bash
cd /proc
for pid in [0-9]*;do
    command=$(cat /proc/$pid/cmdline)
    swap=$(
        awk \'
            BEGIN { total = 0 }
            /swap/ { total += $2}
            END { print total}
            \' /proc/$pid/smaps
            )
    if(($swap > 0));then
        if [[ "${head}" != "yes"]];then
            echo -e "PID\\tSWAP\\tCOMMAND"
            head="yes"
        fi
        
        echo -e "${$pid}\\t${$swap}\\t${command}"
    fi
done


